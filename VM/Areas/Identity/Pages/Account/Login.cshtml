@page

@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row mt-4 mb-4">
    <div class="col-6">
        <section>
            <form id="account" method="post">
                <h2>Login into your account</h2>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mt-4">
                    <label asp-for="Input.Email" class="mb-1">Email Address</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-at-fill"></i></span>
                        <input asp-for="Input.Email" class="form-control shadow-none" placeholder="Email address"
                            autocomplete="username" aria-required="true" />
                        <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mt-2">
                    <label asp-for="Input.Password" class="mb-1">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                        <input asp-for="Input.Password" class="form-control shadow-none" placeholder="Password"
                            autocomplete="current-password" aria-required="true" />
                        <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mt-3 mb-3">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input shadow-none" asp-for="Input.RememberMe" />
                            <span class="mx-1">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
                </div>

                <div class="mt-4">
                    <ul>
                        <li>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </li>
                        <li>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </li>
                    </ul>
                </div>
            </form>
        </section>
    </div>

    <div class="col-6">
        <img src="~/img/login-image.svg" width="600" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

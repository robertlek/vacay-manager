@{
    ViewData["Title"] = "Manage Employees";
}

<div class="mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4>
                <i class="bi bi-people-fill mx-1"></i>
                <span>Manage Employees</span>
            </h4>
        </div>

        <div>
            <a asp-action="Add" class="btn btn-primary shadow-none">
                <i class="bi bi-plus-circle-fill mx-1"></i>
                <span>New Employee</span>
            </a>
        </div>
    </div>

    <table class="table table-borderless table-striped table-sm border" id="employee-table">
        <thead class="table-primary text-center">
            <tr>
                <th>Department</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Phone Number</th>
                <th>Employed on</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

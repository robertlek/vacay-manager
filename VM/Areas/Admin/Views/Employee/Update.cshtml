@model EmployeeUpsertViewModel

@{
    ViewData["Title"] = "Update Employee";
}

<div class="mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>
            <i class="bi bi-people-fill mx-1"></i>
            <span>Update Employee</span>
        </h4>

        <a asp-action="Index" class="btn btn-primary shadow-none">
            <i class="bi bi-fast-forward-circle-fill mx-1"></i>
            <span>Back</span>
        </a>
    </div>

    <form method="post">
        <input asp-for="Employee.Id" type="hidden" />
        <input asp-for="Employee.EmployedOn" type="hidden" />
        <input asp-for="User.Email" type="hidden" />
        <input asp-for="User.Password" type="hidden" />
        <input asp-for="User.ConfirmPassword" type="hidden" />

        <div class="row gx-5">
            <div class="col-6 mb-3">
                <label asp-for="Employee.FirstName" class="mb-1">First Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Employee.FirstName" type="text" class="form-control shadow-none" />
                    <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                </div>
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="Employee.LastName" class="mb-1">Last Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="Employee.LastName" type="text" class="form-control shadow-none" />
                    <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                </div>
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="User.Email" class="mb-1">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope-at-fill"></i></span>
                    <input asp-for="User.Email" type="text" class="form-control" disabled />
                    <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                </div>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="Role" class="mb-1">Role</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-shield-shaded"></i></span>
                    <select asp-for="Role" asp-items="@Model.Roles" class="form-select shadow-none">
                        <option disabled selected>Select Role</option>
                    </select>
                    <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                </div>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="col-6 mb-4">
                <label asp-for="User.PhoneNumber" class="mb-1">Phone Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                    <input asp-for="User.PhoneNumber" type="text" class="form-control shadow-none" />
                    <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                </div>
                <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-6 mb-4">
                <label asp-for="Employee.DepartmentId" class="mb-1">Department</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                    <select asp-for="Employee.DepartmentId" asp-items="@Model.Departments" class="form-select shadow-none">
                        <option disabled selected>Select department</option>
                    </select>
                    <span class="input-group-text text-danger"><i class="bi bi-asterisk small-icon"></i></span>
                </div>
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-center align-items-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg w-50 shadow-none">
                    <i class="bi bi-plus-circle-fill mx-1"></i>
                    <span>Update Employee</span>
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Statistics";
}

<div class="mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4>
                <i class="bi bi-bar-chart-fill mx-1"></i>
                <span>Company statistics</span>
            </h4>
        </div>

        <div>
            <select id="select-list" class="form-select shadow-none">
                <option selected value="0">Vacations planned for the current year</option>
                <option value="1">Employment rate for the half of 2020s</option>
            </select>
        </div>
    </div>

    <div>
        <canvas id="vacations-chart"></canvas>
        <canvas id="employees-chart"></canvas>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/statistics/index.js"></script>
}

@model Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4>Delete Department</h4>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-primary shadow-none">
                <span>Back</span>
            </a>
        </div>
    </div>

    <form method="post">
        <h4 class="mb-3">Are you sure you want to delete this department?</h4>

        <label asp-for="Name">Department Name</label>
        <input asp-for="Name" type="text" class="form-control shadow-none mb-3" disabled />

        <label asp-for="Overlaps">Maximum Overlaps</label>
        <input asp-for="Overlaps" type="text" class="form-control shadow-none mb-3" disabled />

        <button type="submit" class="btn btn-danger shadow-none">
            <span>Delete Department</span>
        </button>
    </form>
</div>

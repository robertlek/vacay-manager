@model IEnumerable<Department>

@{
    ViewData["Title"] = "Manage Departments";
}

<div class="mt-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h4>
                <i class="bi bi-building-fill mx-1"></i>
                <span>Manage Departments</span>
            </h4>
        </div>

        <div>
            <a asp-action="Add" class="btn btn-primary shadow-none">
                <i class="bi bi-plus-circle-fill mx-1"></i>
                <span>Add Department</span>
            </a>
        </div>
    </div>

    <table class="table table-borderless table-striped border">
        <thead class="table-primary text-center">
            <tr>
                <th>Department Name</th>
                <th>Maximum Overlaps</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody class="text-center">
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Overlaps</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@department.Id"
                            class="btn btn-warning btn-sm shadow-none mx-1">
                            <i class="bi bi-pencil-square mx-1"></i>
                            <span>Update</span>
                        </a>
                        <a asp-action="Delete" asp-route-id="@department.Id"
                            class="btn btn-danger btn-sm shadow-none mx-1">
                            <i class="bi bi-trash mx-1"></i>
                            <span>Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
